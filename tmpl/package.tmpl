{{/* This is the per-package default template. The input is the mod.Package structure */}}
<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="styles.css">
</head>
<body>

{{/* Build the breadcrumb in the navbar */}}
<nav>
{{range .PathParts}}{{if .DocFile }}<a href="{{.DocFile}}">{{.DirName}}</a>{{else}}{{.DirName}}{{end}}/{{end}}
</nav>
<div class="package">
<h1>Package {{.Name}}</h1>
<p class="import_path"> import {{.ImportPath}}</p>

{{ $p := . }}
{{ .CommentHtml }}

<h2 id="index">Index</h2>
{{if .Constants }}<p><a href="#Constants">Constants</a>{{end}}
{{if .Variables}}<p><a href="#Variables">Variables</a>{{end}}
{{if .Functions}}<p><a href="#Functions">Functions</a>{{end}}
{{if .Types}}<p><a href="#Types">Types</a>{{end}}

{{if .Constants}}
<h2 id="Constants">Constants</h2>
{{ range .Constants }}
{{range .Names}}
<a id="{{.}}"></a>
{{end}}
<pre>{{.Code}}</pre>
{{.CommentHtml}}
{{end}}
{{end}}

{{if .Variables}}
<h2 id="Variables">Variables</h2>
{{ range .Variables }}
{{range .Names}}
<a id="{{.}}"></a>
{{end}}
<pre>{{.Code}}</pre>
{{.CommentHtml}}
{{end}}
{{end}}

{{if .Functions}}
<h2 id="Functions">Functions</h2>
{{ range .Functions }}
<h3 id="{{.Name}}" class="func-name"><pre>{{.Code}}</pre></h3>
{{.CommentHtml}}
{{end}}
{{end}}

{{if .Types}}
<h2 id="Types">Types</h2>
{{ range .Types }}
{{ $typename := .Name }}
<h3 id="{{ .Name}}" class="type-name">type <i>{{ .Name }}</i></h3>
<pre>{{.Code}}</pre>
{{.CommentHtml}}

{{if .Constants}}<h3 id = "{{ .Name}}.Constants">Constants</h3>{{end}}
{{ range .Constants }}
{{range .Names}}
<a id="{{$typename}}.{{.}}"></a>
{{end}}
<pre>{{.Code}}</pre>
{{.CommentHtml}}
{{end}}

{{if .Variables}}<h3 id = "{{ .Name}}.Variables">Variables</h3>{{end}}
{{ range .Variables }}
{{range .Names}}
<a id="{{$typename}}.{{.}}"></a>
{{end}}
<pre>{{.Code}}</pre>
{{.CommentHtml}}
{{end}}

{{if .Functions}}<h3 id = "{{ .Name}}.Functions">Functions</h3>{{end}}
{{ range .Functions }}
<h4 id="{{$typename}}.{{.Name}}" class="func-name"><pre>{{.Code}}</pre></h4>
{{.CommentHtml}}
{{end}}

{{if .Methods}}<h3 id = "{{ .Name}}.Methods">Methods</h3>{{end}}
{{ range .Methods }}
<h4 id="{{$typename}}.{{.Name}}" class="method-name"><pre>{{.Code}}</pre></h4>

{{.CommentHtml}}
{{end}}
{{end}}
{{end}}

</div>
</body>
</html>